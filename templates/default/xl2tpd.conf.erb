[global]
ipsec saref = yes

[lns default]
ip range = <%= @virtual_ip_range %>
local ip = <%= @virtual_interface_ip %>

require authentication = yes
ppp debug = yes
pppoptfile = <%= @pppoptfile %>
length bit = yes

<% case @authentication_mode %>
<% when 'pam' %> 
unix authentication = yes
<% when 'chap' %>
refuse pap = yes
<% end %>