<% @dns_servers.each do |dns| -%>
ms-dns <%= dns %>
<% end -%>
asyncmap 0
auth
crtscts
lock
hide-password
modem
#debug
name l2tpd
proxyarp
lcp-echo-interval 30
lcp-echo-failure 4

<% case @authentication_mode %>
<% when 'pam' %> 
login
<% when 'chap' %>
require-mschap-v2
<% end %>